            android:layout_height="wrap_content"
            android:text="Dark Art"/>

        <CheckBox
            android:id="@+id/cbCyborg"
            android:textColor="#3E3E3E"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cyborg"/>

        <CheckBox
            android:id="@+id/cbRobotics"
            android:textColor="#3E3E3E"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Robotics"/>

        <CheckBox
            android:id="@+id/cbFuturisticCity"
            android:textColor="#3E3E3E"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Futuristic City"/>

        <CheckBox
            android:id="@+id/cbCyberpunkCity"
            android:textColor="#3E3E3E"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cyberpunk City"/>

        <CheckBox
            android:id="@+id/cbDigitalPortrait"
            android:textColor="#3E3E3E"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Digital Portrait"/>

        <CheckBox
            android:id="@+id/cbArtificialIntelligence"
            android:textColor="#3E3E3E"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Artificial Intelligence"/>

        <CheckBox
            android:id="@+id/cbVirtualReality"
            android:textColor="#3E3E3E"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Virtual Reality"/>

        <CheckBox
            android:id="@+id/cbFutureTechnology"
            android:textColor="#3E3E3E"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Future Technology"/>

        <CheckBox
            android:id="@+id/cbGlitchArt"
            android:textColor="#3E3E3E"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Glitch Art"/>

        <CheckBox
            android:id="@+id/cbComicStyle"
            android:textColor="#3E3E3E"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Comic Style"/>

        <CheckBox
            android:id="@+id/cbDigitalLandscapes"
            android:textColor="#3E3E3E"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Digital Landscapes"/>

        <CheckBox
            android:id="@+id/cbCyberAnimals"
            android:textColor="#3E3E3E"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cyber Animals"/>

        <CheckBox
            android:id="@+id/cbFuturisticVehicles"
            android:textColor="#3E3E3E"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Futuristic Vehicles"/>

        <CheckBox
            android:id="@+id/cbSpaceArt"
            android:textColor="#3E3E3E"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Space Art"/>

    </GridLayout>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnApplyFilter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Apply Filter"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="#DEDEDE"
            android:textSize="16sp"
            app:backgroundTint="#1171BD"
            app:cornerRadius="40dp"
            />
    </LinearLayout>
</ScrollView>
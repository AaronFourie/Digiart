            android:layout_height="wrap_content"
            android:text="Cyberpunk"/>

        <CheckBox
            android:id="@+id/cbAnime"
            android:textColor="#3E3E3E"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Anime"/>

        <CheckBox
            android:id="@+id/cbCharacterDesign"
            android:textColor="#3E3E3E"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Character Design"/>

        <CheckBox
            android:id="@+id/cbConceptArt"
            android:textColor="#3E3E3E"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Concept Art"/>

        <CheckBox
            android:id="@+id/cbDigitalSurrealism"
            android:textColor="#3E3E3E"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Digital Surrealism"/>

        <CheckBox
            android:id="@+id/cbAbstract"
            android:textColor="#3E3E3E"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Abstract"/>

        <CheckBox
            android:id="@+id/cbCyberArt"
            android:textColor="#3E3E3E"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cyber Art"/>

        <CheckBox
            android:id="@+id/cbSteampunk"
            android:textColor="#3E3E3E"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Steampunk"/>

        <CheckBox
            android:id="@+id/cbNature"
            android:textColor="#3E3E3E"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nature"/>

        <CheckBox
            android:id="@+id/cbMinimalism"
            android:textColor="#3E3E3E"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Minimalism"/>

        <CheckBox
            android:id="@+id/cbPopArt"
            android:textColor="#3E3E3E"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pop Art"/>

        <CheckBox
            android:id="@+id/cbRetroFuturism"
            android:textColor="#3E3E3E"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Retro Futurism"/>

        <CheckBox
            android:id="@+id/cbModernArt"
            android:textColor="#3E3E3E"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Modern Art"/>

        <CheckBox
            android:id="@+id/cbFuturistic"
            android:textColor="#3E3E3E"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Futuristic"/>

        <CheckBox
            android:id="@+id/cbVaporwave"
            android:textColor="#3E3E3E"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vaporwave"/>

        <CheckBox
            android:id="@+id/cbSurreal"
            android:textColor="#3E3E3E"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Surreal"/>

        <CheckBox
            android:id="@+id/cbNeon"
            android:textColor="#3E3E3E"

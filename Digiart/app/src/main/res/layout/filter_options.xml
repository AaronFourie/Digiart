<?xml version="1.0" encoding="utf-8"?>
<!-- filter_options.xml -->

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

    <!-- Options for Price -->
    <TextView
        android:textColor="@color/black"
        android:id="@+id/tvPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/price"
        android:textStyle="bold"
        android:textSize="18sp"/>

    <GridLayout
        android:id="@+id/gridPriceOptions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="3">

        <RadioButton
            android:textColor="#424141"
            android:id="@+id/rbFree"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:text="Free"/>

        <RadioButton
            android:id="@+id/rbUnder10"
            android:textColor="#3E3E3E"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:text="@string/_10"/>

        <RadioButton
            android:id="@+id/rbUnder50"
            android:textColor="#3E3E3E"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:text="@string/_10_25"/>

        <RadioButton
            android:id="@+id/rb25to50"
            android:textColor="#3E3E3E"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:text="@string/_25_50"/>

        <RadioButton
            android:id="@+id/rb50to100"
            android:textColor="#3E3E3E"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:text="@string/_50_100"/>

        <RadioButton
            android:id="@+id/rbOver100"
            android:textColor="#3E3E3E"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:text="@string/_100"/>
    </GridLayout>

    <!-- Options for Art Type -->
    <TextView
        android:textColor="@color/black"
        android:id="@+id/tvArtType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/img_type"
        android:textStyle="bold"
        android:textSize="18sp"/>

    <GridLayout
        android:id="@+id/gridImgType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2">

        <CheckBox
            android:id="@+id/cbAll"
            android:layout_width="165dp"
            android:textColor="#3E3E3E"
            android:layout_height="wrap_content"
            android:text="@string/All"/>

        <CheckBox
            android:id="@+id/cbDigitalPainting"
            android:textColor="#3E3E3E"
            android:layout_width="165dp"
            android:layout_height="wrap_content"
            android:text="@string/Photo"/>

        <CheckBox
            android:id="@+id/cbVectorArt"
            android:textColor="#3E3E3E"
            android:layout_width="165dp"
            android:layout_height="wrap_content"
            android:text="@string/Illustration"/>

        <CheckBox
            android:id="@+id/cb3DArt"
            android:textColor="#3E3E3E"
            android:layout_width="165dp"
            android:layout_height="wrap_content"
            android:text="@string/_3d_art_lbl"/>

        <CheckBox
            android:id="@+id/cbPixelArt"
            android:textColor="#3E3E3E"
            android:layout_width="165dp"
            android:layout_height="wrap_content"
            android:text="@string/pixel_art_lbl"/>

        <CheckBox
            android:id="@+id/cbDigitalCollage"
            android:textColor="#3E3E3E"
            android:layout_width="165dp"
            android:layout_height="wrap_content"
            android:text="@string/digital_collage_lbl"/>

        <CheckBox
            android:id="@+id/cbDigitalPhotography"
            android:textColor="#3E3E3E"
            android:layout_width="165dp"
            android:layout_height="wrap_content"
            android:text="@string/digital_photograh_lbl"/>

        <CheckBox
            android:id="@+id/cbDigitalComics"
            android:textColor="#3E3E3E"
            android:layout_width="165dp"
            android:layout_height="wrap_content"
            android:text="@string/digital_comic_lbl"/>

        <CheckBox
            android:id="@+id/cbNFTArt"
            android:textColor="#3E3E3E"
            android:layout_width="165dp"
            android:layout_height="wrap_content"
            android:text="@string/nft_art_lbl"/>

        <CheckBox
            android:id="@+id/cbGenerativeArt"
            android:textColor="#3E3E3E"
            android:layout_width="165dp"
            android:layout_height="wrap_content"
            android:text="@string/generative_art_lbl"/>

        <CheckBox
            android:id="@+id/cbMotionGraphicsAndAnimation"
            android:textColor="#3E3E3E"
            android:layout_width="165dp"
            android:layout_height="wrap_content"
            android:text="@string/motion_grahpics_and_animation_lbl"/>

        <CheckBox
            android:id="@+id/cbDigitalCalligraphyAndLetteting"
            android:textColor="#3E3E3E"
            android:layout_width="165dp"
            android:layout_height="wrap_content"
            android:text="@string/digital_calligraphy_and_lettering_lbl"/>

        <!-- Add other art type options here -->

    </GridLayout>

    <!-- Options for Tag -->
    <TextView
        android:id="@+id/tvTag"
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tag"
        android:textStyle="bold"
        android:textSize="18sp"/>

    <GridLayout
        android:id="@+id/gridTag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2">

        <!-- Options for Tag -->
        <CheckBox
            android:id="@+id/cbLandscape"
            android:textColor="#3E3E3E"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Landscape"/>

        <CheckBox
            android:id="@+id/cbPortrait"
            android:textColor="#3E3E3E"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Portrait"/>

        <CheckBox
            android:id="@+id/cbFantasy"
            android:textColor="#3E3E3E"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fantasy"/>

        <CheckBox
            android:id="@+id/cbSciFi"
            android:textColor="#3E3E3E"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sci-Fi"/>

        <CheckBox
            android:id="@+id/cbCyberpunk"
            android:textColor="#3E3E3E"

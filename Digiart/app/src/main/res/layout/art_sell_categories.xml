<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:padding="20dp"
        app:cardBackgroundColor="#FDFDFD"
        app:cardCornerRadius="30dp"
        app:cardElevation="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingHorizontal="25dp"
                android:paddingVertical="2dp">

                <com.google.android.material.button.MaterialButton
                    style="@android:style/Widget.DeviceDefault.ImageButton"
                    android:layout_width="18dp"
                    android:layout_height="16dp"
                    android:layout_gravity="center"
                    android:background="#00FFFFFF"
                    app:icon="@drawable/close_icon"
                    app:iconGravity="textStart"
                    app:iconSize="18dp"
                    app:iconTint="#000000" />

                <TextView
                    android:layout_width="317dp"
                    android:layout_height="40dp"
                    android:drawingCacheQuality="high"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center"
                    android:paddingHorizontal="10dp"
                    android:text="Start selling now"
                    android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                    android:textColor="#0C0C0C"
                    android:textSize="15sp" />

            </LinearLayout>

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:alignmentMode="alignMargins"
                android:columnCount="3"
                android:paddingHorizontal="95dp"
                android:columnOrderPreserved="false"
                android:paddingTop="0dp"
                android:paddingBottom="25dp"
                android:rowCount="4">

                <!-- Item 1 -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/digitalIllustrationsButton"
                        style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
                        android:layout_width="52dp"
                        android:layout_height="65dp"
                        android:layout_rowWeight="1"
                        android:layout_margin="8dp"
                        android:paddingTop="10dp"
                        android:text=""
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textColor="#000000"
                        android:textSize="9sp"
                        app:backgroundTint="#E6E3E3"
                        app:cornerRadius="12dp"
                        app:icon="@drawable/digital_illustration_icon"
                        app:iconGravity="textTop"
                        app:iconSize="25dp"
                        app:iconTint="#040404" />

                    <!-- Label 1 -->
                    <TextView
                        android:layout_marginTop="-10dp"
                        android:layout_width="58dp"
                        android:gravity="center"
                        android:layout_height="wrap_content"
                        android:text="Digital Illustration"
                        android:textColor="#000000"
                        android:textSize="9sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/digitalIlPaintingButton"
                        style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
                        android:layout_width="52dp"
                        android:layout_height="65dp"
                        android:layout_rowWeight="1"
                        android:layout_margin="8dp"
                        android:paddingTop="10dp"
                        android:text=""
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textColor="#000000"
                        android:textSize="9sp"
                        app:backgroundTint="#E6E3E3"
                        app:cornerRadius="12dp"
                        app:icon="@drawable/digital_painting_icon"
                        app:iconGravity="textTop"
                        app:iconSize="26dp"
                        app:iconTint="#000000" />

                    <!-- Label 1 -->
                    <TextView
                        android:layout_marginTop="-10dp"

                        android:layout_width="58dp"
                        android:gravity="center"
                        android:layout_height="wrap_content"
                        android:text="Digital Painting"
                        android:textColor="#000000"
                        android:textSize="9sp" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/vectorArtButton"
                        style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
                        android:layout_width="52dp"
                        android:layout_height="65dp"
                        android:layout_rowWeight="1"
                        android:layout_margin="8dp"
                        app:iconGravity="textTop"
                        android:paddingTop="10dp"
                        android:text=""
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textColor="#000000"
                        android:textSize="9sp"
                        app:backgroundTint="#E6E3E3"
                        app:cornerRadius="12dp"
                        app:icon="@drawable/vector_art_icon"
                        app:iconSize="25dp"
                        app:iconTint="#000000" />

                    <!-- Label 1 -->
                    <TextView
                        android:layout_marginTop="-10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Vector Art"
                        android:textColor="#000000"
                        android:textSize="9sp" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/threeDArtButton"
                        style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
                        android:layout_width="52dp"
                        android:layout_height="65dp"
                        android:layout_rowWeight="1"
                        android:layout_margin="8dp"
                        android:paddingTop="10dp"
                        android:text=""
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textColor="#000000"
                        android:textSize="9sp"
                        app:backgroundTint="#E6E3E3"
                        app:cornerRadius="12dp"
                        app:icon="@drawable/three_d_art_icon"
                        app:iconGravity="textTop"
                        app:iconSize="27dp"
                        app:iconTint="#050505" />

                    <!-- Label 1 -->
                    <TextView
                        android:layout_marginTop="-10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3D Art"
                        android:textColor="#000000"
                        android:textSize="9sp" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/pixelArtButton"
                        style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
                        android:layout_width="52dp"
                        android:layout_height="65dp"
                        android:layout_rowWeight="1"
                        android:layout_margin="8dp"
                        app:iconGravity="textTop"
                        android:paddingTop="10dp"
                        android:text=""
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textColor="#000000"
                        android:textSize="9sp"
                        app:backgroundTint="#E6E3E3"
                        app:cornerRadius="12dp"
                        app:icon="@drawable/pixel_art_icon"
                        app:iconSize="25dp"
                        app:iconTint="#000000" />

                    <!-- Label 1 -->
                    <TextView
                        android:layout_marginTop="-10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pixel Art"
                        android:textColor="#000000"
                        android:textSize="9sp" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/digitalCollageButton"
                        style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
                        android:layout_width="52dp"
                        android:layout_height="65dp"
                        android:layout_rowWeight="1"
                        android:layout_margin="8dp"
                        app:iconGravity="textTop"
                        android:paddingTop="10dp"
                        android:text=""
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textColor="#000000"
                        android:textSize="9sp"
                        app:backgroundTint="#E6E3E3"
                        app:cornerRadius="12dp"
                        app:icon="@drawable/digital_collage_icon"
                        app:iconSize="25dp"
                        app:iconTint="#090909" />

                    <!-- Label 1 -->
                    <TextView
                        android:layout_marginTop="-10dp"
                        android:layout_width="58dp"
                        android:gravity="center"
                        android:layout_height="wrap_content"
                        android:text="Digital Collage"
                        android:textColor="#000000"
                        android:textSize="9sp" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/digitalPhotographyButton"
                        style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
                        android:layout_width="52dp"
                        android:layout_height="65dp"
                        android:layout_rowWeight="1"
                        android:layout_margin="8dp"
                        app:iconGravity="textTop"
                        android:paddingTop="10dp"
                        android:text=""
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textColor="#000000"
                        android:textSize="9sp"
                        app:backgroundTint="#E6E3E3"
                        app:cornerRadius="12dp"
                        app:icon="@drawable/digital_photography_icon"
                        app:iconSize="25dp"
                        app:iconTint="#000000" />

                    <!-- Label 1 -->
                    <TextView
                        android:layout_marginTop="-10dp"
                        android:layout_width="58dp"
                        android:gravity="center"
                        android:layout_height="wrap_content"
                        android:text="Digital Photograh"
                        android:textColor="#000000"
                        android:textSize="9sp" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/digitalComicsButton"
                        style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
                        android:layout_width="52dp"
                        android:layout_height="65dp"
                        android:layout_rowWeight="1"
                        android:layout_margin="8dp"
                        android:paddingTop="10dp"
                        android:text=""
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textColor="#000000"
                        android:textSize="9sp"
                        app:backgroundTint="#E6E3E3"
                        app:cornerRadius="12dp"
                        app:icon="@drawable/digital_comics_icon"
                        app:iconGravity="textTop"
                        app:iconSize="27dp"
                        app:iconTint="#000000" />

                    <!-- Label 1 -->
                    <TextView
                        android:layout_marginTop="-10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Digital Comic"
                        android:textColor="#000000"
                        android:textSize="9sp" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/nftArtButton"
                        style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
                        android:layout_width="52dp"
                        android:layout_height="65dp"
                        android:layout_rowWeight="1"
                        android:layout_margin="8dp"
                        android:paddingTop="10dp"
                        android:text=""
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textColor="#000000"
                        android:textSize="9sp"
                        app:backgroundTint="#E6E3E3"
                        app:cornerRadius="12dp"
                        app:icon="@drawable/nft_art_icon"
                        app:iconGravity="textTop"
                        app:iconSize="26dp"
                        app:iconTint="#000000" />

                    <!-- Label 1 -->
                    <TextView
                        android:layout_marginTop="-10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="NFT Art"
                        android:textColor="#000000"
                        android:textSize="9sp" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/generativeArtButton"
                        style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
                        android:layout_width="52dp"
                        android:layout_height="65dp"
                        android:layout_rowWeight="1"
                        android:layout_margin="8dp"
                        android:paddingTop="10dp"
                        android:text=""
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textColor="#000000"
                        android:textSize="9sp"
                        app:backgroundTint="#E6E3E3"
                        app:cornerRadius="12dp"
                        app:icon="@drawable/generative_art_icon"
                        app:iconGravity="textTop"
                        app:iconSize="24dp"
                        app:iconTint="#000000" />

                    <!-- Label 1 -->
                    <TextView
                        android:layout_marginTop="-10dp"
                        android:layout_width="58dp"
                        android:gravity="center"
                        android:layout_height="wrap_content"
                        android:text="Generative Art"
                        android:textColor="#000000"
                        android:textSize="9sp" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/motionGrahpicsAndAnimationButton"
                        style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
                        android:layout_width="52dp"
                        android:layout_height="65dp"
                        android:layout_rowWeight="1"
                        android:layout_margin="8dp"
                        android:paddingTop="10dp"
                        android:text=""
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textColor="#000000"
                        android:textSize="9sp"
                        app:backgroundTint="#E6E3E3"
                        app:cornerRadius="12dp"
                        app:icon="@drawable/motion_graphics_and_animation_icon"
                        app:iconGravity="textTop"
                        app:iconSize="26dp"
                        app:iconTint="#000000" />

                    <!-- Label 1 -->
                    <TextView
                        android:layout_marginTop="-10dp"
                        android:layout_width="58dp"
                        android:layout_height="wrap_content"
                        android:text="Motion Grahpics and Animation"
                        android:textColor="#000000"
                        android:gravity="center"
                        android:textSize="9sp" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/digitalCalligraphyAndLetteringButton"
                        style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
                        android:layout_width="52dp"
                        android:layout_height="65dp"
                        android:layout_rowWeight="1"
                        android:layout_margin="8dp"
                        android:paddingTop="10dp"
                        android:text=""
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textColor="#000000"
                        android:textSize="9sp"
                        app:backgroundTint="#E6E3E3"
                        app:cornerRadius="12dp"
                        app:icon="@drawable/digital_calligraphy_and_lettering_icon"
                        app:iconGravity="textTop"
                        app:iconSize="23dp"
                        app:iconTint="#000000" />

                    <!-- Label 1 -->
                    <TextView
                        android:layout_marginTop="-10dp"
                        android:layout_width="58dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Digital Calligraphy and Lettering"
                        android:textColor="#000000"
                        android:textSize="9sp" />

                </LinearLayout>

            </GridLayout>
        </LinearLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>
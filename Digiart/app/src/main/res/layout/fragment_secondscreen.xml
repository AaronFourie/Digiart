<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/SellSecondScreen"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.sell.screens.Secondscreen"
    android:background="@color/white">

    <ImageView
        android:id="@+id/twofthree"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/twoof3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <LinearLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="350dp"
            android:layout_height="250dp"
            android:layout_gravity="center"
            android:contentDescription="@string/set_listing_details_image"
            android:src="@drawable/item_details_removebg"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.01"
            tools:ignore="ImageContrastCheck" />
        <!-- CardView with rounded corners -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingHorizontal="25dp"
                android:paddingBottom="15dp">

                <!-- Selling selection prompt -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:drawingCacheQuality="high"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:gravity="center"
                    android:text="@string/setup_listing_details"
                    android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                    android:textColor="#474747"
                    android:textSize="30sp"
                    tools:ignore="TextSizeCheck" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="30dp">

                <!-- Create Account Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/uploadListingBtn"
                    style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
                    android:layout_width="match_parent"
                    android:layout_height="54dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginHorizontal="30dp"
                    android:outlineAmbientShadowColor="#40000000"
                    android:outlineSpotShadowColor="#80000000"
                    android:text="@string/upload_your_digital_art"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textColor="#000000"
                    android:textSize="15sp"
                    app:rippleColor="#494949"
                    app:backgroundTint="#D6CFCF"
                    app:cornerRadius="12dp"
                    tools:ignore="ObsoleteLayoutParam,VisualLintButtonSize" />
                <!-- Listing Name Input -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/listingNameTextInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    app:boxCornerRadiusBottomEnd="35dp"
                    app:boxCornerRadiusBottomStart="35dp"
                    app:boxCornerRadiusTopEnd="35dp"
                    app:boxCornerRadiusTopStart="35dp"
                    tools:ignore="ObsoleteLayoutParam">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/listingNameEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/product_name"
                        android:textColor="#252525"
                        android:textColorHighlight="#4E93DC"
                        android:textColorLink="#6BABDD"
                        tools:ignore="TextContrastCheck,VisualLintTextFieldSize,TouchTargetSizeCheck" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Listing Name Input -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/listingDescTextInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    app:boxCornerRadiusBottomEnd="35dp"
                    app:boxCornerRadiusBottomStart="35dp"
                    app:boxCornerRadiusTopEnd="35dp"
                    app:boxCornerRadiusTopStart="35dp"
                    tools:ignore="ObsoleteLayoutParam">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/listingDescEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/description"
                        android:inputType="textMultiLine"
                        android:textColor="#252525"
                        android:textColorHighlight="#4E93DC"
                        android:textColorLink="#6BABDD"
                        tools:ignore="TextContrastCheck,VisualLintTextFieldSize,TouchTargetSizeCheck" />
                </com.google.android.material.textfield.TextInputLayout>


                <!-- Listing Name Input -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/listingTagTextInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    app:boxCornerRadiusBottomEnd="35dp"
                    app:boxCornerRadiusBottomStart="35dp"
                    app:boxCornerRadiusTopEnd="35dp"
                    app:boxCornerRadiusTopStart="35dp"
                    tools:ignore="ObsoleteLayoutParam">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/listingTagEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/product_tag_tags"
                        android:textColor="#252525"
                        android:textColorHighlight="#4E93DC"
                        android:textColorLink="#6BABDD"
                        tools:ignore="TextContrastCheck,VisualLintTextFieldSize,TouchTargetSizeCheck" />
                </com.google.android.material.textfield.TextInputLayout>
                <!-- Listing Name Input -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/listingPriceTextInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    app:boxCornerRadiusBottomEnd="35dp"
                    app:boxCornerRadiusBottomStart="35dp"
                    app:boxCornerRadiusTopEnd="35dp"
                    app:boxCornerRadiusTopStart="35dp"
                    tools:ignore="ObsoleteLayoutParam">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/listingPriceEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/price"
                        android:inputType="numberDecimal"
                        android:textColor="#252525"
                        android:textColorHighlight="#4E93DC"
                        android:textColorLink="#6BABDD"
                        tools:ignore="TextContrastCheck,VisualLintTextFieldSize,TouchTargetSizeCheck" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>


        </LinearLayout>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alignmentMode="alignMargins"
            android:columnCount="3"
            android:columnOrderPreserved="false"
            android:paddingHorizontal="40dp"
            android:paddingTop="30dp"
            android:rowCount="1">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/previousBtn"
                style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="0"
                android:fontFamily="sans-serif-condensed-medium"
                android:text="@string/back"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="#7797E6"
                android:textSize="18sp"
                app:backgroundTint="#FFFFFF"
                app:cornerRadius="40dp"
                app:iconTint="#0E5288"
                app:rippleColor="#0D538A"
                tools:ignore="ObsoleteLayoutParam,VisualLintButtonSize,TextContrastCheck" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/nextBtn"
                style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="2"
                android:fontFamily="sans-serif-condensed-medium"
                android:text="@string/next"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="#7797E6"
                android:textSize="18sp"
                app:backgroundTint="#FFFFFF"
                app:cornerRadius="40dp"
                app:iconTint="#0E5288"
                app:rippleColor="#0D538A"
                tools:ignore="ObsoleteLayoutParam,VisualLintButtonSize,TextContrastCheck,TextContrastCheck" />

        </GridLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>